generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String   @id @default(cuid())
  telegramId    BigInt   @unique
  username      String?
  virtualBalance Float    @default(10000.0)
  xp            Int      @default(0)
  level         Int      @default(1)
  trades        Trade[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Trade {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  symbol      String
  type        String
  amount      Float
  price       Float
  timestamp   DateTime @default(now())
}

model SystemConfig {
  id          String @id @default("config")
  xpPerTrade  Int    @default(10)
  initialBalance Float @default(10000.0)
}
